%h1 Saerch Properties
= form_for @property, :url => search_property_path do |f|
  .field
    = f.label "Location/Address"
    = f.text_field :name
  .field
    = f.label :bedroom
    = f.number_field :bedroom

  .actions
    = f.submit 'Search'

%h1 All properties
%table
  %tr
    %th Name
    %th Bedroom
    %th Latitude
    %th Longitude
    %th
    %th
    %th

  - @properties.each do |property|
    %tr
      %td= property.name
      %td= property.bedroom
      %td= property.latitude
      %td= property.longitude
      %td= link_to 'Show', property
      %td= link_to 'Edit', edit_property_path(property)
      %td= link_to 'Destroy', property, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Property', new_property_path
